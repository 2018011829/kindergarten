<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bckapply"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_center_border">
            <ImageView
                android:src="@drawable/password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:src="@drawable/part"
                android:layout_width="20dp"
                android:layout_height="25dp"/>
            <EditText
                android:id="@+id/et_password1"
                android:layout_height="40dp"
                android:hint="请输入6~20位原密码"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:textColorHint="@color/white_gray"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_center_border">
            <ImageView
                android:src="@drawable/password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:src="@drawable/part"
                android:layout_width="20dp"
                android:layout_height="25dp"/>
            <EditText
                android:id="@+id/et_password2"
                android:layout_height="40dp"
                android:hint="请输入6~20位新密码"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:textColorHint="@color/white_gray"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_center_border">
            <ImageView
                android:src="@drawable/password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:src="@drawable/part"
                android:layout_width="20dp"
                android:layout_height="25dp"/>
            <EditText
                android:id="@+id/et_password3"
                android:layout_height="40dp"
                android:hint="请确认6~20位新密码"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:textColorHint="@color/white_gray"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:text="保    存"
            android:textSize="18sp"
            android:textColor="#FF9900"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/full_circle_button"/>

    </LinearLayout>
</LinearLayout>