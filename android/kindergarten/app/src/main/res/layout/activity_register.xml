<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bcklogin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/login"
        android:padding="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="用户注册"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="@color/theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:src="@drawable/identify"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:src="@drawable/part_blue"
                android:layout_width="20dp"
                android:layout_height="25dp"/>
            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/rb_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:checked="true"
                    android:text="家长"
                    android:textSize="20sp"
                    android:textColor="@color/theme"/>
                <RadioButton
                    android:id="@+id/rb_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="20dp"
                    android:text="教师"
                    android:textSize="20sp"
                    android:textColor="@color/theme"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_center_border">
            <ImageView
                android:src="@drawable/phone_num"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:src="@drawable/part"
                android:layout_width="20dp"
                android:layout_height="25dp"/>
            <EditText
                android:id="@+id/et_phone"
                android:inputType="number"
                android:hint="请输入手机号"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:textColorHint="@color/white_gray"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_center_border">
            <ImageView
                android:src="@drawable/nickname"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:src="@drawable/part"
                android:layout_width="20dp"
                android:layout_height="25dp"/>
            <EditText
                android:id="@+id/et_nickname"
                android:hint="请输入昵称"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:textColorHint="@color/white_gray"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_center_border">
            <ImageView
                android:src="@drawable/password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:src="@drawable/part"
                android:layout_width="20dp"
                android:layout_height="25dp"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_height="40dp"
                android:hint="请输入6~20位密码"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:textColorHint="@color/white_gray"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_login_by_msg"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="验证码登录？"
                android:textColor="@color/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tv_login_by_password"
                android:padding="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="密码登录？"
                android:textColor="@color/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_register"
            android:text="注  册"
            android:textSize="18sp"
            android:textColor="#FF9900"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/full_circle_button"/>

    </LinearLayout>
</LinearLayout>
