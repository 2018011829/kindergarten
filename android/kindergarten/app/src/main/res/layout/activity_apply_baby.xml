<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_apply"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".apply.activity.ApplyActivityBaby"
    android:background="@mipmap/bckapply">
    <RelativeLayout
        android:id="@+id/apply_them"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/return_main"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_return"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:text="报名入口"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/rl1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/apply_them"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_border">
        <TextView
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="幼儿信息"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/ll1"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_name"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="宝宝姓名"/>
            <EditText
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/baby_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll1"
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_birthday"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝宝出生日期"
                />
            <EditText
                android:layout_toRightOf="@+id/tv_birthday"
                android:focusable ="true"
                android:focusableInTouchMode="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/baby_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll2"
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sex"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝宝性别"/>

            <RadioGroup
                android:layout_toRightOf="@+id/tv_sex"
                android:layout_marginLeft="30dp"
                android:id="@+id/rg_baby_sex"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/btnMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男" />
                <RadioButton
                    android:layout_marginLeft="30dp"
                    android:id="@+id/btnWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"/>
                <EditText
                    android:id="@+id/baby_sex"
                    android:textSize="18dp"
                    android:layout_toRightOf="@+id/tv_IDnumber"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RadioGroup>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll3"
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_IDnumber"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝宝身份证号"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_IDnumber"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/baby_IDnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll4"
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_addo_allergies"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝宝过敏食物"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_addo_allergies"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/baby_addo_allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/next1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/apply_button1"
        android:text="下一步" />

    <DatePicker
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:theme="@android:style/Theme.Holo.Light"
        android:calendarViewShown="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dp_datapick"
        android:background="@drawable/apply_border">
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            >
            <Button
                android:textColor="#4ad7fa"
                android:id="@+id/btn_cancel"
                android:layout_alignParentLeft="true"
                android:background="#ffffff"
                android:text="取消"
                android:textSize="20dp"
                android:layout_width="80dp"
                android:layout_height="25dp"
                />
            <Button
                android:textColor="#4ad7fa"
                android:id="@+id/btn_confirm"
                android:background="#ffffff"
                android:text="确定"
                android:textSize="20dp"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </DatePicker>



</RelativeLayout>
