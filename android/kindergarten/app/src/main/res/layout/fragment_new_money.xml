<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#5ab9ff"
            android:id="@+id/apply_them"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/return_new"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_return" />
            <TextView
                android:text="费用规则"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_margin="20dp"
            android:background="@drawable/apply_inside_yellow2"
            android:layout_below="@+id/apply_them"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="石家庄市裕华区华兴幼儿园"
                    android:textSize="25dp"
                    android:textColor="#000000" />
            </LinearLayout>
            <TextView
                android:layout_below="@id/rl1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:id="@+id/rl2"
                android:layout_below="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="幼儿园性质"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />

                <TextView
                    android:text="惠普幼儿园"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:textColor="#000000"  />
            </LinearLayout>
            <TextView
                android:layout_below="@id/rl2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:id="@+id/rl3"
                android:layout_below="@id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:text="幼儿园类别"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />
                <TextView
                    android:text="城市二类幼儿园"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:textColor="#000000" />
            </LinearLayout>
            <TextView
                android:layout_below="@id/rl3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:id="@+id/rl4"
                android:layout_below="@id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:text="收费项目和标准"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:layout_below="@id/rl4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:id="@+id/rl5"
                android:layout_below="@id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:text="收费项目"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />
                <TextView
                    android:text="计算单位"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />
                <TextView
                    android:text="收费标准"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:layout_below="@id/rl5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:id="@+id/rl6"
                android:layout_below="@id/rl5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:text="保教费"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />
                <TextView
                    android:text="元/生/月"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />
                <TextView
                    android:text="1000元"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:layout_below="@id/rl6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:id="@+id/rl7"
                android:layout_below="@id/rl6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:text="伙食费"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />
                <TextView
                    android:text="元/生/月"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />
                <TextView
                    android:text="18元"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:layout_below="@id/rl7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <LinearLayout
                android:id="@+id/rl8"
                android:layout_below="@id/rl7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:text="退费规定"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000" />
                <TextView
                    android:text="      当月幼儿园实际在园时间（即出勤天数不足一天按整天计算)，不足一月，保教费按以下方法计算:
\n      1、实际在园时间为0天的不得收费;\n      2、实际在园时间为1-10天的,按月收费标准的50%收取，实际在园时间11天及以上的按整月收取。"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:layout_below="@id/rl8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />
            <RelativeLayout
                android:layout_margin="10dp"
                android:id="@+id/wr_areas"
                android:layout_below="@id/rl8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="幼儿园咨询电话:0311-85885701"
                    android:textColor="#000000"/>
            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_return"
            android:background="@drawable/apply_button_blue"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="阅读完毕"/>
    </LinearLayout>


</ScrollView>
