<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_apply"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".apply.activity.ApplyActivityBaby"
    android:background="@mipmap/bckapply">
    <RelativeLayout
        android:id="@+id/apply_them"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/return_baby"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_return"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:text="报名入口"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/rl1"
        android:layout_below="@+id/apply_them"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_border">
        <TextView
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="家长信息1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <RelativeLayout
            android:id="@+id/ll1"
            android:layout_below="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长姓名"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_name1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/parent_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll2"
            android:layout_below="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_relation1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="与宝宝关系"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_relation1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/relation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll3"
            android:layout_below="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_number1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_number1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/phone_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll4"
            android:layout_below="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_space1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作单位"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_space1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/work_space1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll5"
            android:layout_below="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_address1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家庭住址"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_address1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/home_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/rl2"
        android:layout_below="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apply_border">
        <TextView
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="家长信息2(选填)"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <RelativeLayout
            android:id="@+id/ll6"
            android:layout_below="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name2"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长姓名"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_name2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/parent_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll7"
            android:layout_below="@+id/ll6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_relation2"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="与宝宝关系"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_relation2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/relation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll8"
            android:layout_below="@+id/ll7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_number2"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_number2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/phone_number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll9"
            android:layout_below="@+id/ll8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_space2"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作单位"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_space2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/work_space2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll10"
            android:layout_below="@+id/ll9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_address2"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家庭住址"/>
            <EditText
                android:textSize="18dp"
                android:layout_toRightOf="@+id/tv_address2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/home_address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/apply_button1"
        android:id="@+id/next2"
        android:layout_below="@+id/rl2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="下一步"/>

</RelativeLayout>
